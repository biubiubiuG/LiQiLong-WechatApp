
.diy-notice {
	margin: 20rpx;
	display: flex;
	justify-content: flex-start;
	align-items: center;
	border-radius: 6rpx;
	/* box-shadow: 0 0 8rpx rgba(0, 0, 0, 0.1); */
}
.diy-notice .notice-icon {
	width: 64rpx;
	height: 64rpx;
	margin-right: 20rpx;
}
.diy-notice .notice-icon image {
	width: 100%;
	height: 100%;
}
.diy-notice .notice-text {
	overflow: hidden;
	white-space: nowrap;
}
.transtext{
	min-width: 586rpx;
	flex-shrink: 0;
	white-space: nowrap;
	float: left;
}

